{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "kind": {
          "type": "string",
          "description": "Cloud component type",
          "enum": [
            "kafka"
          ],
          "readOnly": true
        },
        "properties": {
          "type": "object",
          "required": [
            "topics"
          ],
          "description": "Kafka properties",
          "properties": {
            "topics": {
              "type": "array",
              "description": "Setup the topics that we will create in kafka",
              "default": [
                {
                  "name": "write_your_topic_name_here"
                }
              ],
              "minItems": 1,
              "items": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "pattern": "^[a-z0-9.-]+$",
                    "description": "The topic name"
                  },
                  "partitions": {
                    "type": "number",
                    "description": "The total of partitions used by topic",
                    "default": 3,
                    "maximum": 12
                  },
                  "retention": {
                    "type": "number",
                    "description": "The retention time in milliseconds to persist the information in topic. Default: 1 week",
                    "default": 604800000,
                    "maximum": 1209600000
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/cloud/component.schema.json"
    }
  ]
}