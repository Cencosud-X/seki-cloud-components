{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "properties": {
          "type": "object",
          "required": [
            "topics"
          ],
          "description": "Kafka properties",
          "properties": {
            "topics": {
              "type": "array",
              "description": "Setup the topics that we will create in Kafka",
              "default": [
                {
                  "name": "two_letters_country.product.entity.state.v1"
                }
              ],
              "minItems": 1,
              "items": {
                "type": "object",
                "required": [
                  "name"
                ],
                "allOf": [
                  {
                    "properties": {
                      "name": {
                        "description": "The topic name"
                      },
                      "exists": {
                        "type": "boolean",
                        "default": false,
                        "description": "Marks the topic as existing, so we won't manage it (useful when you want to use a topic from another product)"
                      }
                    }
                  },
                  {
                    "if": {
                      "properties": {
                        "exists": {
                          "const": true
                        }
                      },
                      "required": ["exists"]
                    },
                    "then": {
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "exists": {
                          "const": true
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  {
                    "if": {
                      "properties": {
                        "exists": {
                          "const": false
                        }
                      }
                    },
                    "then": {
                      "properties": {
                        "name": {
                          "type": "string",
                          "pattern": "^[a-z]{2}\\.[a-z-_]+\\.[a-z-_]+\\.[a-z-_]+\\.v{1}\\d{1,2}$"
                        },
                        "partitions": {
                          "type": "number",
                          "description": "The total of partitions used by topic",
                          "default": 3,
                          "minimum": 1,
                          "maximum": 12
                        },
                        "retention": {
                          "type": "number",
                          "description": "The retention time in milliseconds to persist the information in topic. Default: 1 week",
                          "default": 604800000,
                          "minimum": 86400000,
                          "maximum": 1209600000
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/cloud/component.schema.json"
    }
  ]
}