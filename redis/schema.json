{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "properties": {
          "type": "object",
          "description": "Redis properties",
          "required": ["memory_size_gb"],
          "default": {
            "memory_size_gb": 1,
            "production": {
                "tier": "BASIC",
                "memory_size_gb": 1
            }
          },
          "properties": {
            "memory_size_gb": {
              "$ref": "#/definitions/memory_size_gb"
            },
            "production": {
              "required": ["tier", "memory_size_gb"],
              "properties": {
                "tier": {
                  "type": "string",
                  "default": "BASIC",
                  "enum": [ "BASIC", "STANDARD_HA"],
                  "description": "The service tier of the redis instance"
                },
                "memory_size_gb": {
                  "$ref": "#/definitions/memory_size_gb"
                }
              },
              "if": {
                "properties": {
                  "tier": {
                    "const": "STANDARD_HA"
                  }
                },
                "required": ["tier"]
              },
              "then": {
                "properties": {
                  "memory_size_gb": {
                    "default": 5,
                    "minimum": 5
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/cloud/component.schema.json"
    }
  ],
  "definitions": {
    "memory_size_gb": {
      "type": "number",
      "default": 1,
      "minimum": 1,
      "maximum": 10,
      "description": "Redis memory size in GiB used by servers"
    }
  }
}