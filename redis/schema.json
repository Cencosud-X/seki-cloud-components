{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "kind": {
          "type": "string",
          "description": "Cloud component type",
          "enum": [
            "redis"
          ],
          "readOnly": true
        },
        "properties": {
          "type": "object",
          "description": "Redis properties",
          "properties": {
            "tier": {
              "type": "string",
              "default": "BASIC",
              "enum": [ "BASIC", "STANDARD_HA"],
              "description": "The service tier of the redis instance"
            },
            "memory_size_gb": {
              "type": "number",
              "default": 1,
              "minimum": 1,
              "maximum": 10,
              "description": "Redis memory size in GiB"
            }
          },
          "if": {
            "properties": {
              "tier": {
                "const": "STANDARD_HA"
              }
            },
            "required": ["tier"]
          },
          "then": {
            "properties": {
              "replica_count": {
                "type":"number",
                "description": "The number of replicas",
                "default": 1,
                "minimum": 1,
                "maximum": 4
              },
              "read_replicas_mode": {
                "type":"string",
                "enum": ["READ_REPLICAS_DISABLED", "READ_REPLICAS_ENABLED"],
                "default": "READ_REPLICAS_DISABLED",
                "description": "Read replicas mode"
              }
            },
            "required": ["replica_count"],
            "if": {
              "properties": {
                "read_replicas_mode": {
                  "const": "READ_REPLICAS_ENABLED"
                }
              },
              "required": ["read_replicas_mode"]
            },
            "then": {
              "properties": {
                "memory_size_gb": {
                  "type": "number",
                  "default": 5,
                  "minimum": 5,
                  "maximum": 10,
                  "description": "Redis memory size in GiB"
                }
              }
            }
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/cloud/component.schema.json"
    }
  ]
}