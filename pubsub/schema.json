{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "kind": {
          "type": "string",
          "description": "Cloud component type",
          "enum": [
            "pubsub"
          ],
          "readOnly": true
        },
        "properties": {
          "type": "object",
          "required": [
            "topics"
          ],
          "description": "PubSub properties",
          "properties": {
            "topics": {
              "type": "array",
              "description": "Setup the topics that we will create in PubSub",
              "default": [
                {
                  "name": "country.product.entity.state"
                }
              ],
              "minItems": 1,
              "items": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "pattern": "^[a-z]{2}\\.[a-z-]+\\.[a-z]+\\.[a-z]+$",
                    "description": "The topic name"
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/cloud/component.schema.json"
    }
  ]
}